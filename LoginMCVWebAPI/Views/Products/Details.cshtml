@using WebAPIJwtAuth.Application.DTOs
@model ProductDto
@{
    ViewData["Title"] = Model.Name;
    var relatedProducts = ViewBag.RelatedProducts as IEnumerable<ProductDto> ?? new List<ProductDto>();
}
<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Products</a></li>
            @if (Model.Category != null)
            {
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", new { categoryId = Model.CategoryId })">
                        @Model.Category.Name
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Images -->
        <div class="col-lg-6">
            <!-- Main Image -->
            <div class="card mb-3">
                <img src="@(Model.ImageUrl ?? "/images/placeholder.png")"
                     class="card-img-top"
                     alt="@Model.Name"
                     id="mainProductImage"
                     style="max-height: 500px; object-fit: contain;">
            </div>

            <!-- Thumbnails -->
            @if (Model.Images.Any())
            {
                <div class="row g-2">
                    @foreach (var image in Model.Images.OrderBy(i => i.SortOrder))
                    {
                        <div class="col-3">
                            <div class="thumbnail @(image.IsPrimary ? "active" : "")"
                                 onclick="changeMainImage('@image.ImageUrl')"
                                 style="cursor: pointer;">
                                <img src="@image.ImageUrl"
                                     class="img-thumbnail"
                                     alt="@image.AltText"
                                     style="height: 100px; object-fit: cover;">
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="card border-0">
                <div class="card-body">
                    <!-- Category & Brand -->
                    <div class="mb-3">
                        @if (Model.Category != null)
                        {
                            <a href="@Url.Action("Index", new { categoryId = Model.CategoryId })"
                               class="badge bg-info text-decoration-none">
                                @Model.Category.Name
                            </a>
                        }
                        @if (Model.Brand != null)
                        {
                            <a href="@Url.Action("Index", new { brandId = Model.BrandId })"
                               class="badge bg-secondary text-decoration-none">
                                @Model.Brand.Name
                            </a>
                        }
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-warning">
                                <i class="fas fa-star me-1"></i>Featured
                            </span>
                        }
                    </div>

                    <!-- Product Name -->
                    <h1 class="card-title mb-3">@Model.Name</h1>

                    <!-- SKU -->
                    <p class="text-muted mb-3">
                        SKU: <code>@Model.SKU</code>
                    </p>

                    <!-- Rating -->
                    @if (Model.AverageRating.HasValue)
                    {
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= Math.Round(Model.AverageRating.Value) ? "text-warning" : "text-muted") fs-5"></i>
                                }
                                <span class="ms-2">
                                    <strong>@Model.AverageRating.Value.ToString("N1")</strong>
                                    <span class="text-muted">(@Model.TotalReviews reviews)</span>
                                </span>
                            </div>
                        </div>
                    }

                    <!-- Price -->
                    <div class="mb-4">
                        @if (Model.HasDiscount)
                        {
                            <div class="d-flex align-items-center">
                                <span class="h2 text-danger fw-bold me-3">
                                    $@Model.FinalPrice.ToString("N2")
                                </span>
                                <span class="text-muted text-decoration-line-through fs-5">
                                    $@Model.Price.ToString("N2")
                                </span>
                                <span class="badge bg-danger ms-3 fs-6">
                                    Save @Model.DiscountPercentage%
                                </span>
                            </div>
                        }
                        else
                        {
                            <span class="h2 fw-bold">$@Model.Price.ToString("N2")</span>
                        }
                    </div>

                    <!-- Stock Status -->
                    <div class="alert @(Model.IsInStock ? "alert-success" : "alert-danger") mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas @(Model.IsInStock ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                            <div>
                                <strong>@(Model.IsInStock ? "In Stock" : "Out of Stock")</strong>
                                @if (Model.IsInStock)
                                {
                                    <div class="small">@Model.StockQuantity units available</div>
                                }
                                else
                                {
                                    <div class="small">This item is currently out of stock</div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="card-text">@Html.Raw(Model.Description?.Replace("\n", "<br>"))</p>
                    </div>

                    <!-- Product Details -->
                    <div class="row mb-4">
                        @if (Model.Weight.HasValue)
                        {
                            <div class="col-md-6">
                                <strong>Weight:</strong>
                                <span class="text-muted">@Model.Weight.Value.ToString("N2") kg</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Dimensions))
                        {
                            <div class="col-md-6">
                                <strong>Dimensions:</strong>
                                <span class="text-muted">@Model.Dimensions</span>
                            </div>
                        }
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2 d-md-flex mb-4">
                        @if (Model.IsInStock)
                        {
                            <button class="btn btn-primary btn-lg me-2" onclick="addToCart('@Model.Id')">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg me-2" disabled>
                                <i class="fas fa-bell me-2"></i>Notify When Available
                            </button>
                        }

                        <button class="btn btn-outline-secondary btn-lg" onclick="addToWishlist('@Model.Id')">
                            <i class="fas fa-heart me-2"></i>Add to Wishlist
                        </button>
                    </div>

                    <!-- Admin Actions -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <div class="border-top pt-3 mt-3">
                            <h6>Admin Actions</h6>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })"
                                   class="btn btn-warning">
                                    <i class="fas fa-edit me-2"></i>Edit Product
                                </a>
                                <form method="post"
                                      action="@Url.Action("Delete", new { id = Model.Id })"
                                      onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i>Delete Product
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (relatedProducts.Any())
    {
        <div class="mt-5">
            <h3 class="mb-4">Related Products</h3>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var product in relatedProducts)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@(product.ImageUrl ?? "/images/placeholder.png")"
                                 class="card-img-top"
                                 alt="@product.Name"
                                 style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@Url.Action("Details", new { id = product.Id })"
                                       class="text-decoration-none">
                                        @product.Name
                                    </a>
                                </h5>
                                <p class="card-text">
                                    <strong>$@product.FinalPrice.ToString("N2")</strong>
                                    @if (product.HasDiscount)
                                    {
                                        <span class="text-muted text-decoration-line-through">
                                            $@product.Price.ToString("N2")
                                        </span>
                                    }
                                </p>
                                <a href="@Url.Action("Details", new { id = product.Id })"
                                   class="btn btn-outline-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function changeMainImage(imageUrl) {
            document.getElementById('mainProductImage').src = imageUrl;

            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
        }

        function addToCart(productId) {
            // Implement cart functionality
            alert('Added to cart!');
        }

        function addToWishlist(productId) {
            // Implement wishlist functionality
            alert('Added to wishlist!');
        }
    </script>

    <style>
        .thumbnail.active {
            border: 2px solid #0d6efd;
        }

        .thumbnail:hover {
            opacity: 0.8;
        }
    </style>
}